{# ThemeWare: CMS block "Two columns 8-4" #}

{% block block_twt_grid_two_column_8_4 %}

    {% block block_twt_grid_two_column_8_4_left %}
        {% set element = block.slots.getSlot('left') %}

        <div class="column-1 col-12 col-md-8 twt-column left first">
            {% block block_twt_grid_two_column_8_4_left_inner %}
                {% sw_include "@Storefront/storefront/element/cms-element-" ~ element.type ~ ".html.twig" ignore missing %}
            {% endblock %}
        </div>
    {% endblock %}

    {% block block_twt_grid_two_column_8_4_right %}
        {% set element = block.slots.getSlot('right') %}

        <div class="column-2 col-12 col-md-4 twt-column right last">
            {% block block_twt_grid_two_column_8_4_right_inner %}
                {% sw_include "@Storefront/storefront/element/cms-element-" ~ element.type ~ ".html.twig" ignore missing %}
            {% endblock %}
        </div>
    {% endblock %}

{% endblock %}
