{# ThemeWare: CMS block "Four columns" #}

{% block block_twt_grid_four_column %}

    {% block block_twt_grid_four_column_col1 %}
        {% set element = block.slots.getSlot('col1') %}

        <div class="column-1 col-12 col-md-6 col-lg-3 twt-column first">
            {% block block_twt_grid_four_column_col1_inner %}
                {% sw_include "@Storefront/storefront/element/cms-element-" ~ element.type ~ ".html.twig" ignore missing %}
            {% endblock %}
        </div>
    {% endblock %}

