{# ThemeWare: CMS block "Three columns" #}

{% block block_twt_grid_three_column %}

    {% block block_twt_grid_three_column_left %}
        {% set element = block.slots.getSlot('left') %}

        <div class="column-1 col-12 col-lg-4 twt-column left first">
            {% block block_twt_grid_three_column_left_inner %}
                {% sw_include "@Storefront/storefront/element/cms-element-" ~ element.type ~ ".html.twig" ignore missing %}
            {% endblock %}
        </div>
    {% endblock %}

    {% block block_twt_grid_three_column_center %}
        {% set element = block.slots.getSlot('center') %}

        <div class="column-2 col-12 col-lg-4 twt-column center">
            {% block block_twt_grid_three_column_center_inner %}
                {% sw_include "@Storefront/storefront/element/cms-element-" ~ element.type ~ ".html.twig" ignore missing %}
            {% endblock %}
        </div>
    {% endblock %}

    {% block block_twt_grid_three_column_right %}
        {% set element = block.slots.getSlot('right') %}

        <div class="column-3 col-12 col-lg-4 twt-column right last">
            {% block block_twt_grid_three_column_right_inner %}
                {% sw_include "@Storefront/storefront/element/cms-element-" ~ element.type ~ ".html.twig" ignore missing %}
            {% endblock %}
        </div>
    {% endblock %}

{% endblock %}
