{# ThemeWare: CMS block "Three columns 3-6-3" #}

{% block block_twt_grid_three_column_3_6_3 %}

    {% block block_twt_grid_three_column_3_6_3_left %}
        {% set element = block.slots.getSlot('left') %}

        <div class="column-1 col-12 col-lg-3 twt-column left first">
            {% block block_twt_grid_three_column_3_6_3_left_inner %}
                {% sw_include "@Storefront/storefront/element/cms-element-" ~ element.type ~ ".html.twig" ignore missing %}
            {% endblock %}
        </div>
    {% endblock %}

    {% block block_twt_grid_three_column_3_6_3_center %}
        {% set element = block.slots.getSlot('center') %}

        <div class="column-2 col-12 col-lg-6 twt-column center">
            {% block block_twt_grid_three_column_3_6_3_center_inner %}
                {% sw_include "@Storefront/storefront/element/cms-element-" ~ element.type ~ ".html.twig" ignore missing %}
            {% endblock %}
        </div>
    {% endblock %}

    {% block block_twt_grid_three_column_3_6_3_right %}
        {% set element = block.slots.getSlot('right') %}

        <div class="column-3 col-12 col-lg-3 twt-column right last">
            {% block block_twt_grid_three_column_3_6_3_right_inner %}
                {% sw_include "@Storefront/storefront/element/cms-element-" ~ element.type ~ ".html.twig" ignore missing %}
            {% endblock %}
        </div>
    {% endblock %}

{% endblock %}
