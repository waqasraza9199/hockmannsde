{% sw_extends '@Framework/documents/style_base_portrait.css.twig' %}

{% block document_style %}

    {{ parent() }}

    .letter-header {
        top:-150px;
    }

    .letter-header-table,
    .comment-body-table {
        width:100%;
    }

    .title-header-container {
        background-color:{{ config('BetterInvoice.config.primarycolor')|raw }};
        padding:30px;
        width:30%;
        vertical-align: center;
    }

    .comment-body-table {
        margin-top:2rem;
    }

    .comment-body-table .body-column {
        padding-right:30px;
    }

    .comment-body-table .qr-column {
        width:30%;
        padding:30px;
        background-color:{{ config('BetterInvoice.config.secondarycolor')|raw }};
    }

    .sum-table tr.bold {
        color:{{ config('BetterInvoice.config.primarycolor')|raw }};
    }

    .sum-table {
        border-spacing:0;
    }

    .sum-table tr td:last-child {
        width:75px;
    }

    .title-header-container span {
        font-size:30px;
        color:white;
        line-height:1;
        text-transform: uppercase;
        font-weight:bold;
    }

    .recipient-address-container {
        margin-top: 0px;
    }

    .sender-address-small {
        color:#71797E;
    }

    .document-side-info {
        background-color:{{ config('BetterInvoice.config.secondarycolor')|raw }};
        padding: 25px;
    }

    .col-ordernumber {
        font-weight:bold;
    }

    .col-invoicenumber {
        padding-bottom:10px;
        font-weight:bold;
    }

    .overdue-badge {
        text-transform:uppercase;
        font-size:12px;
        font-weight:bold;
        border:2px #ff0033 solid;
        padding:10px;
        display:inline-block;
        text-align:center;
        color:#ff0033;
        transform: rotate(-10deg);
        margin-left:15px;
    }

    .letter-body {
        padding-top:20px;
    }

    .footer-line {
        width:100%;
        height:2px;
        background-color:{{ config('BetterInvoice.config.primarycolor')|raw }};
        position:fixed;
        bottom:-15px;
        left:0;
        right:0;
    }

    footer {
        position: fixed;
        bottom: 130px;
        font-size: 9px;
    }

    footer > ul {
        width:19.3%;
        background-color:white;
    }

    .page-count {
        font-weight:bold;
        padding-bottom:15px;
    }

    .payment-shipping-container {
        padding-top:3px;
    }

    .payment-shipping-container .block {
        float:left;
        background-color:{{ config('BetterInvoice.config.secondarycolor')|raw }};
        padding:15px;
        margin-right:10px;
    }

    .clear {
        clear:both;
    }

    .comment-section {
        padding-top:30px;
    }

{% endblock %}