<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <!-- Scheduler/Command Definition -->
        <service id="ZaibaNotifyAdminIfSMTPNotWorking\ScheduledTask\ExampleTask">
            <tag name="shopware.scheduled.task" />
        </service>

        <service id="ZaibaNotifyAdminIfSMTPNotWorking\ScheduledTask\ExampleTaskHandler">
            <argument type="service" id="scheduled_task.repository" />
            <argument id="Shopware\Core\Content\Mail\Service\MailService" type="service"/>
            <argument id="sales_channel.repository" type="service"/>
            <argument id="Shopware\Core\System\SystemConfig\SystemConfigService" type="service"/>
            <tag name="messenger.message_handler" />
        </service>



    </services>
</container>
