<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

<!--         Services -->
        <service id="ZaibaSandMailToValidOrders\Services\MailService">
            <argument type="service" id="order.repository" />
            <argument type="service" id="mail_template.repository" />
            <argument type="service" id="event_dispatcher" />
            <argument type="service" id="request_stack" />
            <argument type="service" id="Shopware\Core\Content\Mail\Service\MailService" />
        </service>

        <!-- Scheduler/Command Definition -->
        <service id="ZaibaSandMailToValidOrders\ScheduledTasks\Tasks\OrderSubscriber\OrderTask">
            <tag name="shopware.scheduled.task" />
        </service>

        <service id="ZaibaSandMailToValidOrders\ScheduledTasks\Handlers\OrderSubscriber\OrderTaskHandler">
            <argument type="service" id="scheduled_task.repository" />
            <argument type="service" id="order.repository" />
            <argument type="service" id="ZaibaSandMailToValidOrders\Services\MailService"/>
            <argument type="service" id="Doctrine\DBAL\Connection"/>
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService"/>
            <tag name="messenger.message_handler" />
        </service>

<!--        Commands-->
        <service id="ZaibaSandMailToValidOrders\Command\OrderSubscriber\Notify">
            <argument type="service" id="ZaibaSandMailToValidOrders\ScheduledTasks\Handlers\OrderSubscriber\OrderTaskHandler" />
            <tag name="console.command"/>
        </service>

    </services>
</container>
