{% sw_extends '@Storefront/storefront/element/cms-element-rhweb-shop-the-look.html.twig' %}

{% block element_rhweb_shop_the_look %}
    {% set rhwebAnimation = element.config.rhwebAnimation.value %}

    {% if rhwebAnimation %}
        {% if rhwebAnimation.in.active or rhwebAnimation.out.active or rhwebAnimation.hover.active %}
            <div data-rhweb-animation='{{ rhwebAnimation|json_encode|raw }}'>
                {{ parent() }}
            </div>
        {% else %}
            {{ parent() }}
        {% endif %}
    {% else %}
        {{ parent() }}
    {% endif %}
{% endblock %}
