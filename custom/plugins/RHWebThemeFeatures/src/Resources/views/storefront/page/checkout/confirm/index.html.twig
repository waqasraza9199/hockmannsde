{% sw_extends '@Storefront/storefront/page/checkout/confirm/index.html.twig' %}

{% block base_header %}
    {% if config('RHWebThemeFeatures.config.rhwebActivateCustomCheckout') != 'custom' %}
        {{ parent() }}
    {% else %}
        {% if config('core.cart.wishlistEnabled') %}
            {% block layout_header_minimal_wishlist %}
                {% sw_include '@Storefront/storefront/layout/header/actions/wishlist-widget.html.twig' with {
                    showCounter: false
                } %}
            {% endblock %}
        {% endif %}
    {% endif %}
{% endblock %}

{% block page_checkout_main_content %}
    {% if config('RHWebThemeFeatures.config.rhwebActivateCustomCheckout') != 'custom' %}
        {{ parent() }}
    {% else %}
        <div class="rhweb-checkout-content-main">
            <div class="container">
                {% sw_include "@Storefront/storefront/layout/header/header-minimal.html.twig" with {
                    customCheckout:true
                } %}
                {% block page_checkout_confirm_header %}
                    {{ block("page_checkout_confirm_header", "@Storefront/storefront/page/checkout/confirm/index.html.twig") }}
                {% endblock %}
                    {{ block("page_checkout_confirm_alerts", "@Storefront/storefront/page/checkout/confirm/index.html.twig") }}
                {% block page_checkout_confirm_tos_control %}
                    {{ block("page_checkout_confirm_tos", "@Storefront/storefront/page/checkout/confirm/index.html.twig") }}
                {% endblock %}
                {% block page_checkout_confirm_address %}
                    {{ block("page_checkout_confirm_address", "@Storefront/storefront/page/checkout/confirm/index.html.twig") }}
                {% endblock %}

                {% block page_checkout_confirm_payment_shipping %}
                    <div class="confirm-payment-shipping">
                        <div class="row">
                            {% block page_checkout_confirm_payment %}
                                {{ block("page_checkout_confirm_payment", "@Storefront/storefront/page/checkout/confirm/index.html.twig") }}
                            {% endblock %}
                            {% block page_checkout_confirm_shipping %}
                                {{ block("page_checkout_confirm_shipping", "@Storefront/storefront/page/checkout/confirm/index.html.twig") }}
                            {% endblock %}
                        </div>
                    </div>
                {% endblock %}
            </div>
        </div>
        <div class="rhweb-checkout-content-aside">
            <div class="container">
                {% block page_checkout_confirm_table_header %}{% endblock %}
                {% block page_checkout_confirm_table_items %}
                    {{ block("page_checkout_confirm_product_table", "@Storefront/storefront/page/checkout/confirm/index.html.twig") }}
                {% endblock %}
                {% block page_checkout_confirm_hidden_line_items_information %}
                    {{ block("page_checkout_confirm_hidden_line_items_information", "@Storefront/storefront/page/checkout/confirm/index.html.twig") }}
                {% endblock %}
                {% block page_checkout_additional %}
                    {{ block("page_checkout_additional", "@Storefront/storefront/page/checkout/confirm/index.html.twig") }}
                {% endblock %}
                {% block page_checkout_aside_summary %}
                    {{ block("page_checkout_aside_summary", "@Storefront/storefront/page/checkout/_page.html.twig") }}
                {% endblock %}
                {% block page_checkout_aside_actions %}
                    {{ block("page_checkout_aside_actions", "@Storefront/storefront/page/checkout/confirm/index.html.twig") }}
                {% endblock %}
                {{ block("layout_footer_vat", "@Storefront/storefront/layout/footer/footer.html.twig") }}
            </div>
        </div>
    {% endif %}
{% endblock %}

{% block base_footer %}
    {% if config('RHWebThemeFeatures.config.rhwebActivateCustomCheckout') != 'custom' %}
        {{ parent() }}
    {% endif %}
{% endblock %}
