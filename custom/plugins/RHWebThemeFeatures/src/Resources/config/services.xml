<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <imports>
        <import resource="demo-data.xml"/>
    </imports>

    <services>
        <service id="RHWeb\ThemeFeatures\Subscriber\CmsLoaderSubscriber">
            <argument type="service" id="Shopware\Core\Content\Cms\SalesChannel\SalesChannelCmsPageRepository"/>
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService"/>
            <argument type="service" id="Shopware\Core\Content\Cms\SalesChannel\SalesChannelCmsPageLoader" />
            <argument type="service" id="Shopware\Core\Content\Cms\SalesChannel\SalesChannelCmsPageLoader" />
            <tag name="kernel.event_subscriber"/>
        </service>

        <service id="RHWeb\ThemeFeatures\Core\Framework\Twig\AnimatedExtension">
            <tag name="twig.extension"/>
        </service>

        <service id="RHWeb\ThemeFeatures\Core\Service\CustomCookieProvider"
                 decorates="Shopware\Storefront\Framework\Cookie\CookieProviderInterface">
            <argument type="service" id="RHWeb\ThemeFeatures\Core\Service\CustomCookieProvider.inner" />
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService" />

        </service>
    </services>
</container>
